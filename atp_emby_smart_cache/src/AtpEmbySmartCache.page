function apiCall($endpoint, $method = 'GET', $data = null) {
    global $settings;
    $port = isset($settings['SERVER_PORT']) ? intval($settings['SERVER_PORT']) : 9999;
    $url = "http://127.0.0.1:{$port}{$endpoint}";
    
    // Try curl first
