    if (typeof swal !== 'undefined') {
        swal({
            title: options.title || 'Alert',
            text: options.text || '',
            type: options.type || 'info'
        });
    } else {
        alert((options.title ? options.title + '\n\n' : '') + (options.text || ''));
    }
};

